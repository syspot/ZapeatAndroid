<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/distanciaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distanciaText"
        android:layout_alignLeft="@+id/distanciaText"
        android:layout_marginBottom="49dp"
        android:text="Distância para verificação" />

    <TextView
        android:id="@+id/periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/distanciaText"
        android:layout_below="@+id/distanciaText"
        android:layout_marginTop="44dp"
        android:text="Periodicidade para atualização de promoções (Em horas)"/>

    <EditText
        android:id="@+id/periodoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/periodo"
        android:layout_below="@+id/periodo"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/periodoText"
        android:layout_alignRight="@+id/periodoText"
        android:layout_below="@+id/periodoText"
        android:layout_marginTop="31dp"
        android:text="Salvar configurações" />

</RelativeLayout>
